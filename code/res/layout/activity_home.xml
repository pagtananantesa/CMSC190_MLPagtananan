<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="@dimen/_315sdp"
        android:layout_height="@dimen/_20sdp"

        android:visibility="gone"
        android:textColor="#000000"
        android:textSize="@dimen/_15ssp"/>

    <RelativeLayout
        android:id="@+id/startPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_113sdp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_220sdp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/logo5" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_gravity="top"
                    app:srcCompat="@drawable/logo7" />


            </FrameLayout>

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/textView2"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_72sdp"
                android:gravity="center"
                android:textAlignment="center"
                android:text="for measuring eggplant leaf dimension"
                android:textColor="#000000"
                android:textSize="@dimen/_12ssp" />

            <Button
                android:id="@+id/button"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/rounded_button"
                android:text="START"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearlayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textAlignment="center"
             />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_margin="@dimen/_10sdp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter Plot No." />



        <AutoCompleteTextView
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_margin="@dimen/_10sdp"
            android:ems="10"
            android:hint="Enter Accession No." />

        <EditText
            android:id="@+id/editText9"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_margin="@dimen/_10sdp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter Plant I.D." />

        <Button
            android:id="@+id/button26"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            android:onClick="okHandler"
            android:text="OK" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            app:srcCompat="@drawable/ic_image_black_24dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/button19"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="SAVE"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            android:visibility="gone"/>

        <Button
            android:id="@+id/button23"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="RETAKE IMAGE"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_65sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:scaleType="fitCenter"
            android:background="@drawable/rounded_button"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_action_capture" />

        <Button
            android:id="@+id/button27"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_50sdp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            android:text="PICK FROM GALLERY" />

        <Button
            android:id="@+id/button24"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_50sdp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="visible"
            android:text="BACK" />

        <Button
            android:id="@+id/button25"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            android:background="@drawable/rounded_button"
            android:text="SELECT GRADE" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/editText88"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_margin="@dimen/_10sdp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter Plot No." />



        <AutoCompleteTextView
            android:id="@+id/editText44"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_margin="@dimen/_10sdp"
            android:ems="10"
            android:hint="Enter Accession No." />

        <EditText
            android:id="@+id/editText99"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_margin="@dimen/_10sdp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter Plant I.D." />

        <Button
            android:id="@+id/button266"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            android:onClick="okHandler"
            android:text="OK" />


        <Button
            android:id="@+id/button244"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_50sdp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="visible"
            android:text="BACK" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textAlignment="center"
           />

        <EditText
            android:id="@+id/editText7"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_margin="@dimen/_10sdp"
            android:ems="10"
            android:hint="Enter Plant I.D."
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="@dimen/_15sdp" />

        <Button
            android:id="@+id/button14"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_50sdp"
            android:text="SEARCH"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            android:onClick="searchHandler"/>

        <Button
            android:id="@+id/button15"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="BACK"
            android:visibility="visible"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            android:onClick="backHandler"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listview4"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ListView
        android:id="@+id/listview3"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ListView
        android:id="@+id/listview2"
         android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ListView
        android:id="@+id/listview"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </ListView>

    <ListView
        android:id="@+id/listview5"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>

